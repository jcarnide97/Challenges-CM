<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#FF3E01"
                android:centerColor="#FF3E01"
                android:centerY="1.0"
                android:endColor="#FF3E01"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="#B7EF5C"
                    android:centerColor="#B7EF5C"
                    android:centerY="1.0"
                    android:endColor="#FF3E01"/>
            </shape>
        </clip>
    </item>
</layer-list>